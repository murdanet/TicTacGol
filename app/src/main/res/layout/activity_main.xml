<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondofutbol">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TickTackGol"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="30dp"
     android:textColor="@color/white"/>

    <ImageView
        android:layout_width="230dp"
        android:layout_height="290dp"
        android:src="@drawable/tablerointro"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titulo"
        android:id="@+id/tablero"/>

    <Button
        android:id="@+id/iniciarJuego"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@id/tablero"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ovalo_button"
        android:text="Comenzar"
        android:textColor="@color/white"
        android:textStyle="bold"
        style="@style/ButtonBlackBorder"/>

    <Button
        android:id="@+id/salirjuego"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@id/iniciarJuego"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/ovalo_button"
        android:text="Salir"
        android:textColor="@color/white"
        android:textStyle="bold"
        style="@style/ButtonBlackBorder"/>


</RelativeLayout>